<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" id="search" placeholder="輸入餐廳或分類" aria-label="Restaurant Name..."
            value="{{keyword}}" data-length="{{filter_length}}"aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{{!-- add new restaurant feature --}}
<div class="container new-res d-flex flex-row-reverse">
  <a href="/restaurant/new" class="btn btn-primary mt-3">新增餐廳</a>
</div>
<!-- restaurant list -->
{{#if restaurants.length}}
<div class="container mt-3">
  <div class="row">
    <div class="col-md-12 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div class="total-card">
          <div class="card mb-2">
            <a href="/restaurants/{{this._id}}" class="text-secondary">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-sm"></i>
                </span>
                <div class="action text-right ">
                  <a href="/restaurants/{{this._id}}/edit" class="edit"><i class="fas fa-edit fa-lg"></i></a>
                  <a href="/restaurants/{{this._id}}" class="detail"><i class="fas fa-info-circle fa-lg"></i></a>
                  <form action="/restaurants/{{this._id}}/delete" method="POST" style="display:inline">
                    <button type="submit" class="btn btn-major" id="delete"><i class="fas fa-trash-alt"></i></button>
                  </form>
                </div>
              </div>

            </a>
          </div>


          <!--add edit, delete, detail -->
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{!-- 如果restaurant長度為0，則跳出sweetalert --}}
